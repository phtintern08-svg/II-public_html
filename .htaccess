# Impromptu Indian - Apache Configuration for cPanel
# This file configures Apache to work with Flask application via Passenger

# Enable Rewrite Engine
RewriteEngine On

# Force HTTPS in production (uncomment if SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Handle subdomains (vendor, rider)
RewriteCond %{HTTP_HOST} ^vendor\. [NC]
RewriteRule ^(.*)$ - [E=SUBDOMAIN:vendor]

RewriteCond %{HTTP_HOST} ^rider\. [NC]
RewriteRule ^(.*)$ - [E=SUBDOMAIN:rider]

# Pass all requests to Passenger/WSGI
# Passenger will handle routing to the Flask application
RewriteRule ^(.*)$ - [L]

# Security Headers (additional to those set in Flask)
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(env|pyc|py|log|sql|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to static files
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|glb|mp4|pdf)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Set default charset
AddDefaultCharset UTF-8

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Increase upload size limit (adjust as needed)
php_value upload_max_filesize 16M
php_value post_max_size 16M

